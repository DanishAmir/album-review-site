.panel.panel-default
  .panel-body
    .row
      .col-md-4
        = image_tag @album.image.url(:medium)
        .table-responsive
          %table.table
            %tbody
              %tr
                %td
                  %b Album Name:
                %td= @album.title
              %tr
                %td Description
                %td= @album.description
              %tr
                %td Sang by
                %td= @album.artist
              %tr
                %td Released in
                %td= @album.year
          = link_to "Write review", new_album_review_path(@album), class: "btn btn-danger"
      .col-md-7.col-md-offset-1
        %h1.review_title= @album.title
        %p= @album.description
        - if @reviews.blank?
          %h3 Add a review, click the red button
        - else
          - @reviews.each do |review|
            %p= review.stars
            %p= review.thoughts



          
