%nav
  - if user_signed_in?
    = "#{current_user.email} |"
    = link_to t('Home'), root_path, class: "btn btn-success"
    = '|'
    = link_to t('profile'), edit_user_registration_path, class: "btn btn-success"
    = '|'
    = link_to t('logout'), destroy_user_session_path, method: 'delete', class: "btn btn-success"
    = '|'
    = link_to t('View Albums'), albums_path, class: "btn btn-success"
    = '|'
    = link_to t('Add Album'), new_album_path, class: "btn btn-success"
    = '|'
    = link_to t('Contact us'), contact_path, class: "btn btn-success"
    = '|'
    = link_to t('View Wishlist'), wishlists_path, class: "btn btn-success"
  - else
    = link_to t('login'), new_user_session_path, class: "btn btn-success"
    = '|'
    = link_to t('sign_up'), new_user_registration_path, class: "btn btn-success"
    = '|'
    = link_to t('View Albums'), albums_path, class: "btn btn-success"

- flash.each do |key, value|
  = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?